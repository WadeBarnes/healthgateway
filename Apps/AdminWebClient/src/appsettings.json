{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "SwaggerSettings": {
        "RoutePrefix": "swagger",
        "Info": {
            "Title": "Health Gateway WebClient Services documentation",
            "Description": "Provides API documentation for Health Gateway WebClient Services.",
            "License": {
                "Name": "Apache 2.0",
                "Url": "https://www.apache.org/licenses/LICENSE-2.0.html"
            }
        }
    },
    "OpenIdConnect": {
        "SaveTokens": "false",
        "GetClaimsFromUserInfoEndpoint": "true",
        "SignedOutRedirectUri": "/logout",
        "ResponseType": "code",
        "Scope": "openid profile email offline_access",
        "RequireHttpsMetadata": "false"
    },
    "KeyCloak": {
        "IDPHintKey": "kc_idp_hint",
        "IDPHint": "idir"
    },
    "IdentityProviders": [
        {
            "id": "BCSC",
            "Name": "BC Services Card",
            "Icon": "address-card",
            "Hint": "bcsc",
            "disabled": "false"
        }
    ],
    "Admin": {
        "LogLevel": "Debug",
        "TimeOuts": {
            "Idle": "900000",
            "LogoutRedirect": "20000"
        },
        "ExternalURLs": {
            "HealthLinkImmunizationSchedule": "https://www.healthlinkbc.ca/tools-videos/bc-immunization-schedules",
            "HealthLinkVaccineSearch": "https://www.healthlinkbc.ca/search/"
        }
    },
    "ForwardProxies": {
        "Enabled": "true",
        "BasePath": "/admin",
        "IPs": []
    }
}
